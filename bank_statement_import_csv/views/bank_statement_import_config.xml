<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bank_statement_import_config_form" model="ir.ui.view">
        <field name="name">Bank Statement Import Wizard</field>
        <field name="model">bank.statement.import.config</field>
        <field name="arch" type="xml">
            <form string="Bank Statement Import Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="first_row"/>
                            <field name="delimiter"/>
                            <field name="quotechar"/>
                            <field name="encoding"/>

                            <field name="date_index"/>
                            <field name="date_format"/>

                            <field name="description_enabled"/>
                            <field name="description_index"
                                attrs="{'invisible': [('description_enabled', '=', False)]}"/>

                            <field name="reference_enabled"/>
                            <field name="reference_index"
                                attrs="{'invisible': [('reference_enabled', '=', False)]}"/>

                            <field name="withdraw_deposit_enabled"/>
                            <field name="withdraw_index"
                                attrs="{'invisible': [('withdraw_deposit_enabled', '=', False)]}"/>
                            <field name="deposit_index"
                                attrs="{'invisible': [('withdraw_deposit_enabled', '=', False)]}"/>

                            <field name="amount_index"
                                attrs="{'invisible': [('withdraw_deposit_enabled', '=', True)]}"/>

                            <field name="balance_enabled"/>
                            <field name="balance_index"
                                attrs="{'invisible': [('balance_enabled', '=', False)]}"/>

                            <field name="currency_amount_enabled"/>
                            <field name="currency_index"
                                attrs="{'invisible': [('currency_amount_enabled', '=', False)]}"/>
                            <field name="currency_amount_index"
                                attrs="{'invisible': [('currency_amount_enabled', '=', False)]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
