<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="account_journal_form" model="ir.ui.view">
        <field name="name">Account Journal Form: add reconcile_show_payments_only</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <field name="post_at_bank_rec" position="after">
                <field name="reconcile_show_payments_only" attrs="{'invisible': [('type', 'not in', ['bank', 'cash'])]}"/>
            </field>
        </field>
    </record>

</odoo>
