<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="online_bank_statement_provider_form" model="ir.ui.view" >
        <field name="name">Online Bank Statement Provider: add Stripe</field>
        <field name="model">online.bank.statement.provider</field>
        <field name="inherit_id" ref="account_bank_statement_import_online.online_bank_statement_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='configuration']" position="inside">
                <group attrs="{'invisible': [('service', '!=', 'stripe')]}">
                    <group>
                        <field
                            name="stripe_api_key"
                            string="API Key"
                            attrs="{'required': [('service', '=', 'stripe')]}"
                        />
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
