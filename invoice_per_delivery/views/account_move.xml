<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_delivery_form" model="ir.ui.view">
        <field name="name">account.move.delivery.form.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <field name="country_code" position="after">
                <field name="picking_id" invisible="1" />
            </field>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button string="Delivery" name="action_view_delivery" type="object" class="oe_stat_button" icon="fa-truck" 
                attrs="{'invisible':[('picking_id', '=', False)]}">
                </button>
            </xpath>

        </field>
    </record>
</odoo>