<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_delivery_invoice_form" model="ir.ui.view">
        <field name="name">stock.delivery.invoice.form.view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <field name="use_create_lots" position="after">
                <field name="invoice_id" invisible="1" />
            </field>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button string="Invoice" name="action_view_invoice" type="object" class="oe_stat_button" icon="fa-pencil-square-o" 
                attrs="{'invisible':[('invoice_id', '=', False)]}">
                </button>
            </xpath>

        </field>
    </record>
</odoo>