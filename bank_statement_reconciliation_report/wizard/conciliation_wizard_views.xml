<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="conciliation_wizard_view_form" model="ir.ui.view">
            <field name="name">conciliation_wizard_view_form</field>
            <field name="model">conciliation.wizard</field>
            <field name="arch" type="xml">
                <form string="conciliation_wizard_form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="statement_id" invisible="1"/>
                                <field name="balance_end_real" />
                                <field name="total_outbound"/>
                                <field name="total_inbound"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="conciliation_balance"/>
                                <field name="difference"/>
                                <field name="account_balance"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="outstanding" string="Oustanding Cheques">
                                <field name="payment_outbound_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="date"/>
                                        <field name="partner_id"/>
                                        <field name="name"/>
                                        <field name="credit" sum="Amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="outstanding" string="Oustanding Deposits">
                                <field name="payment_inbound_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="date"/>
                                        <field name="partner_id"/>
                                        <field name="name"/>
                                        <field name="debit" sum="Amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>