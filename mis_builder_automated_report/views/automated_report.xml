<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="automated_report_view_tree">
        <field name="name">automated.report.view.tree</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <tree class="o_documents_list_view" create="false" edit="false">
                <field name="name" string="Report"/>
                <field name="create_uid" string="User"/>
                <field name="create_date" string="Edition"/>
                <field name="datas" string="File" filename="datas_fname" widget="binary"/>
                <field name="datas_fname" invisible="1"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="automated_report_view_action">
        <field name="name">Automated Reports</field>
        <field name="view_id" ref="automated_report_view_tree"/>
        <field name="res_model">ir.attachment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('res_model', '=', 'mis.report.instance')]</field>
    </record>
    <menuitem
        id="automated_report_view_menu"
        parent="mis_builder.mis_report_finance_menu"
        name="Automated Reports"
        action="automated_report_view_action"
        sequence="30"
    />
</odoo>