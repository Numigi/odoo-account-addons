<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="supplier_invoice_form" model="ir.ui.view">
        <field name="name">Supplier Invoice: filter payment terms per usage</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="attributes">
                <attribute name="domain">[
                    '|',
                    ('usage', '=', False),
                    ('usage', 'in', ('purchase', 'sale_and_purchase')),
                ]</attribute>
            </field>
        </field>
    </record>

    <record id="customer_invoice_form" model="ir.ui.view">
        <field name="name">Customer Invoice: filter payment terms per usage</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="attributes">
                <attribute name="domain">[
                    '|',
                    ('usage', '=', False),
                    ('usage', 'in', ('sale', 'sale_and_purchase')),
                ]</attribute>
            </field>
        </field>
    </record>

</odoo>
